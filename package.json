{
  "name": "md4x",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "zig build --verbose",
    "dev": "cd website && bun run dev",
    "fmt": "prettier --write .",
    "vitest": "vitest",
    "md4x": "zig build && bun packages/md4x/lib/cli.mjs",
    "test": "bun ./scripts/run-tests.ts && bun vitest",
    "bench": "bun packages/md4x/bench/index.mjs",
    "release": "bun scripts/release.ts"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "node-api-headers": "^1.8.0",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.9"
}
